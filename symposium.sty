%% maketitleの再定義
\renewcommand{\maketitle}[0]{
	\twocolumn[%
		\centering
		\vskip -5truept

		%% 主題
		\fontsize{16truept}{0pt}\selectfont
		\@title

		%% 副題
		\ifthenelse{\equal{\@subtitle}{\empty}}%
		{%
			%% 副題を設定してないなら
			\vskip 20truept
		}{%
			%% 副題を設定したなら配置
			\vskip 16truept

			\fontsize{14truept}{0pt}\selectfont
			\@subtitle

			\vskip 20truept
		}

		%% 著者
		\fontsize{12truept}{0pt}\selectfont
		\@author

		\vskip 4truept

		%% 所属
		\fontsize{12truept}{0pt}\selectfont
		\@affiliation


		\vskip 20truept
		
		%% 概要
		\fontsize{11truept}{0pt}\selectfont
		\textbf{概要 Abstract}	%% for English, you must change this
		%
		\vskip 4truept
		\begin{minipage}{\textwidth-20truemm}
		\begin{flushleft}
		\fontsize{9truept}{0pt}\selectfont
		\@abstract
		\end{flushleft}
		\end{minipage}

		\vskip 35truept
	]
}
